{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-focus",
    "opener:default",
    "store:default",
    "dialog:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOWNLOAD/**/*" }
      ]
    }
  ]
}